{
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^7.1",
        "gregwar/image": "^2.0",
        "sonata-project/admin-bundle": "^3.28",
        "sonata-project/doctrine-orm-admin-bundle": "^3.2",
        "symfony/asset": "^3.4",
        "symfony/console": "^3.4",
        "symfony/flex": "^1.0",
        "symfony/framework-bundle": "^3.4",
        "symfony/lts": "^3",
        "symfony/orm-pack": "^1.0",
        "symfony/swiftmailer-bundle": "^3.1",
        "symfony/twig-bundle": "^3.4",
        "symfony/yaml": "^3.4"
    },
    "require-dev": {
        "symfony/dotenv": "^3.4"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
