<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}{{ preference('title') }}{% endblock %}</title>
        <meta name="keywords" content="{% block keywords %}{{ preference('keywords') }}{% endblock %}"/>
        <meta name="description" content="{% block description %}{{ preference('description') }}{% endblock %}"/>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
{% block stylesheets %}
        <link rel="shortcut icon" href="{{ asset('image/favicon.ico') }}"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('css/index.css') }}"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('css/supersized.css') }}"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('css/supersized.shutter.css') }}"/>
{% endblock %}
{% block javascripts %}
        <script type="text/javascript" src="{{ asset('js/jquery-2.1.3.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jquery.form.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jquery.simplemodal.1.4.4.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/supersized.3.2.6.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/supersized.shutter.min.j') }}s"></script>
        <script type="text/javascript" src="{{ asset('js/jquery.cycle2.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jquery.cycle2.carousel.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/interface.js') }}"></script>
{% endblock %}
    </head>
    <body id="{% block style %}default{% endblock %}">
        <div class="wrapper">
            <div class="header">
                <div class="left">
                    <div class="logo">
                        <a href="{{ path('index') }}">
                            <img src="{{ asset('image/bodysolid_logo.png') }}" />
                        </a>
                    </div>
                    <div class="contact">
                        <div class="phone">
                            <p>{{ preference('site_phone') }}</p>
                        </div>
                        <div class="callback">
                            <a href="{{ path('callback') }}" title="Обратный звонок" onclick="return callback()">
                                <img src="{{ asset('image/top_phone.png') }}"/>
                            </a>
                        </div>
                        <div class="email">
                            <a href="mailto:{{ preference('site_email') }}">
                                <img src="{{ asset('image/top_mail.png') }}"/>
                            </a>
                        </div>
                    </div>
                    <div class="menu">
{{ render(controller('AppBundle:Product:menu')) }}
                    </div>
                </div>
                <div class="right">
                    <div class="menu">
                        <a href="{{ path('about') }}">О компании</a>
                        <a href="{{ path('delivery') }}">Доставка и оплата</a>
                        <a href="{{ path('contact') }}">Контакты</a>
                    </div>
                </div>
            </div>
            <div class="content">
{% block content %}{% endblock %}
            </div>
            <div class="cart">
{{ render(controller('AppBundle:Cart:info')) }}
            </div>
            <div class="price-list">
                <div class="title">
                    <a href="{{ path('price_list') }}">Прайс-<br/>лист</a>
                </div>
            </div>
            <div class="bottom_25">
                <a class="bottom_25" href="/"><img src="{{ asset('image/bottom_25.png') }}"/></a>
            </div>
            <div class="footer">
                <div class="search">
                    <form method="get" action="{{ path('search') }}">
                        <div class="text">
                            <input type="text" name="text" placeholder="Поиск..." />
                        </div>
                        <div class="submit">
                            <input type="submit" value="" />
                        </div>
                    </form>
                </div>
                <div class="copyright">
                    <p>&copy; ООО "Фитнесспорт", {{ "now"|date("Y") }} г.</p>
                </div>
            </div>
        </div>
    </body>
</html>
